{
    "useTabs": false,
    "printWidth": 120,
    "tabWidth": 4,
    "singleQuote": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "bracketSpacing": true,
    "semi": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "proseWrap": "always",
    "requirePragma": false,
    "insertPragma": false,
    "plugins": ["prettier-plugin-svelte"],
    "pluginSearchDirs": ["."],
    "overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
